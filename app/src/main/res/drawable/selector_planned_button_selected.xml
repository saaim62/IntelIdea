<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"

    >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <solid android:color="#1b593a" />
        <corners
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp" />
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />
        <stroke
            android:width="6dp"
            android:color="#258153" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <solid android:color="#3fd389" />
        <corners
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp" />
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />
        <stroke
            android:width="6dp"
            android:color="#258153" />
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <solid android:color="#CFD5D7" />
        <corners
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp" />
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />
        <stroke
            android:width="0dp"
            android:color="#00ffffff" />
    </shape>
</item>
</selector>